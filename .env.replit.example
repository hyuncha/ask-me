# Replit Environment Variables
# Copy these to your Replit Secrets

# Database Configuration (Replit PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_replit_username
DB_PASSWORD=
DB_NAME=cleaners_ai
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
SERVER_PORT=8080
ENVIRONMENT=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=https://your-repl-url.repl.co/auth/google/callback

# Pinecone Configuration (Required for RAG)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENV=us-east-1-aws
PINECONE_INDEX_NAME=ComCleaners/qna

# OpenAI Configuration (Required)
LLM_API_KEY=your_openai_api_key
LLM_MODEL=gpt-4-turbo-preview
LLM_PROVIDER=openai

# Frontend Configuration
REACT_APP_API_URL=https://your-repl-url.repl.co
